                </div>
            </div>
        </div>
    </div>
    <div id="PurOrderDetails" class="display_none">
        <div class="col-12 service-content">
            <div class="serviceBox">
                @*  <div class="bg-light-blue row g-0">*@
                <div class="row g-0">
                    <div class="col-12 col-md-4">
                        <div class="form-group row g-0">
                            <label class="col-4 align-self-center p-md-0"> @SystemResource.Pur_TRNO   </label>
                            <div class="col-8">
                                <input disabled type="text" class="form-control" id="txtPurTrNo">
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-md-3">
                        <div class="form-group row g-0">
                            <label class="col-4 align-self-center p-md-0"> @SystemResource.App_date   </label>
                            <div class="col-8">
                                <input disabled type="date" class="form-control" id="txtDateHeader">
                            </div>
                        </div>
                    </div>


                    <div class="col-12 col-md-3">
                        <div class="form-group row g-0">
                            <label class="col-4 align-self-center p-md-0"> @SystemResource.Trns_RefNum   </label>
                            <div class="col-8">
                                <input disabled type="text" class="form-control" id="txtRefNum">
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-2">
                        <div class="form-group row g-0">
                            <label class="col-5 align-self-center p-md-0">@SystemResource.App_approved</label>
                            <div class="col-7 ">
                                <input type="checkbox" class="checkbox" id="chkActive" disabled name="CUSTOM6" />
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-md-4">
                        <div class="form-group row g-0">
                            <label class="col-4 align-self-center p-md-0">@SystemResource.I_Vendor</label>
                            <div class="col-8 ">
                                <select disabled class="form-control" id="ddlVendorHeader"></select>
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-md-3">
                        <div class="form-group row g-0">
                            <label class="col-4 align-self-center p-md-0">@SystemResource.Pur_PaymentType</label>
                            <div class="col-8 ">
                                <select disabled class="form-control" id="ddlIsCash"></select>
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-md-3">
                        <div class="form-group row g-0">
                            <label class="col-4 align-self-center p-md-0">@SystemResource.Currency</label>
                            <div class="col-8 ">
                                <select disabled class="form-control" id="ddlCurrency"></select>
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-md-2">
                        <div class="form-group row g-0">
                            <label class="col-5 align-self-center p-md-0">@SystemResource.Isrecieved </label>
                            <div class="col-7 ">
                                <input type="checkbox" class="checkbox" id="chkReceived" name="IsReceived" disabled />
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-md-4">
                        <div class="form-group row g-0">
                            <label class="col-4 align-self-center p-md-0">@SystemResource.App_Salesman</label>
                            <div class="col-8 ">
                                <select disabled class="form-control" id="ddlSalesmanHeader"></select>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-4">
                        <div class="form-group row g-0">
                            <label class="col-4 align-self-center p-md-0">@SystemResource.App_TaxType</label>
                            <div class="col-8 ">
                                <select disabled class="form-control" id="ddlTaxTypeHeader"></select>
                            </div>
                        </div>
                    </div>

                    <!-- Inside Table  -->
                    <div class="inside-table my-4">
