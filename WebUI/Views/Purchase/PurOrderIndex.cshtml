                                    <select id="ddlSalesmanMaster" class="form-control"></select>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-md-4">
                            <div class="form-group row">
                                <label class="col-4 align-self-center p-md-0">@SystemResource.cash_type</label>
