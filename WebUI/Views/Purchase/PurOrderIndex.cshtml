                    <div class="col-4 col-xs-offset-8">
                        <div class="form-group row g-0" id="divtotal_">
                            <label class="col-3 align-self-center p-md-0">@SystemResource.I_Total</label>
                            <div class="col-3 ">
                                <input type="text" disabled class="form-control" name="" id="txtTotal" />
                            </div>
                            <div class="col-3 ">
                                <input type="text" disabled class="form-control" name="" id="txtVatTotal" />
                            </div>
                            <div class="col-3 ">
                                <input type="text" disabled class="form-control" name="" id="txtNetTotal" />
                            </div>
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="form-group row g-0">
                            <label class="col-4 align-self-center p-md-0">@SystemResource.Pur_ExpirePeriod</label>
                            <div class="col-8 ">
                                <input type="text" class="form-control" id="txtValidityPeriod" disabled>
                            </div>
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="form-group row g-0">
                            <label class="col-4 align-self-center p-md-0">@SystemResource.Pur_Termsofsupply</label>
                            <div class="col-8 ">
                                <textarea type="text" class="form-control" id="txtDliveryConditions" disabled></textarea>
                            </div>
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="form-group row g-0">
                            <label class="col-4 align-self-center p-md-0">@SystemResource.Pur_Shippingterms</label>
                            <div class="col-8 ">
                                <textarea type="text" class="form-control" id="txtShipmentConditions" disabled></textarea>
                            </div>
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="form-group row g-0">
                            <label class="col-4 align-self-center p-md-0">@SystemResource.App_Notes</label>
                            <div class="col-8 ">
                                <textarea type="text" class="form-control"  id="txtNotes" disabled></textarea>
                            </div>
                        </div>
                    </div>

                    <!-- Editors Details -->
                    <div class="insettext row editor-details">
                        <div class="col-12 col-md-6">

                            <div class="form-group row g-0">
                                <label class="col-2 align-self-center p-md-0"> @SystemResource.App_Pur</label>
                                <div class="col-5 editor-input">
                                    <input id="txtCreatedBy" name="CREATED_BY" type="text" disabled class="p-0">
                                </div>
                                <div class="col-5 editor-input">
                                    <input id="txtCreatedAt" name="CREATED_AT" type="text" disabled class="p-0">
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-md-6">
                            <div class="form-group row g-0">
                                <label class="col-2 align-self-center p-md-0"> @SystemResource.App_Update</label>
                                <div class="col-5 editor-input">
                                    <input id="txtUpdatedBy" name="UPDATED_BY" type="text" disabled class="p-0">
                                </div>
                                <div class="col-5 editor-input">

                                    <input id="txtUpdatedAt" name="UPDATED_AT" type="text" disabled class="p-0">
                                </div>
                            </div>
                        </div>

                    </div>


                </div>
        </div>
    </div>
   
    
    
   
</div>
</div>
