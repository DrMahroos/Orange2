                                <thead>
                                    <tr>
                                        <th style="width: 3%"></th>
                                        <th style="width: 15%">@SystemResource.Itm_ItemCode</th>
                                        <th style="width: 20%">@SystemResource.App_Item</th>
                                        <th style="width: 20%">@SystemResource.Pur_RequiredQty</th>
                                        <th style="width: 8%" class="text-wrap">@SystemResource.Itm_ReceivedQuntity</th>
                                        <th style="width: 8%" class="text-wrap">@SystemResource.App_Price</th>
                                        <th style="width: 8%" class="text-wrap">@SystemResource.App_total</th>
                                        <th style="width: 8%" class="text-wrap">@SystemResource.App_Tax</th>
                                        <th style="width: 10%" class="text-wrap">@SystemResource.App_TotAfterTax</th>


                                    </tr>
                                </thead>
