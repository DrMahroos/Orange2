<div class="row gy-3" id="div_ContentData">
    <!-- Filter Container -->
    <div class="col-12">
        <div class="card bg-light-blue">
            <div class="card-body">
                <div class="row">
                    <div class="col-12 col-md-4">
                        <div class="form-group row">
                            <label class="col-4 align-self-center p-md-0">@SystemResource.APP_Category</label>
                            <div class="col-8 ">
                                <select id="drpPaymentType" class="form-control">
                                    <option value="Null">@SystemResource.APP_Category</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Table  -->
    <div class="col-12">
        <div class="inside-table my-4">
            <div class="table-responsive">
                <table class="table table-borderless ">
